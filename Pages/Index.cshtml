<section id="contact" class="contact">
    <h1 class="heading">Contact Us</h1>
    <h3 class="title">We're Here for You Anytime</h3>
    <div class="row">
        <div class="images">
            <img src="/images/form.png" alt="Contact form illustration">
        </div>
        <form class="form-container" method="post">
            <label for="full-name">Full Name</label>
            <input type="text" id="full-name" name="FullName" placeholder="Full Name" required>
            <label for="email">Email</label>
            <input type="email" id="email" name="Email" placeholder="Enter your email" required>
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="Phone" placeholder="Phone" pattern="[0-9]{10,15}">
            <label for="message">Message</label>
            <textarea id="message" name="Message" cols="30" rows="10" placeholder="Your message" required></textarea>
            <input type="submit" value="Send" aria-label="Submit contact form">
        </form>
    </div>
</section>

