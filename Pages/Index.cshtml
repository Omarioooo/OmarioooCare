@page
@model OmarioooCare.Pages.LandingModel
@{
    Layout = "_Layout";
}

<section id="home" class="home">
    <div class="row">
        <div class="images">
            <img src="~/images/home.png" alt="Hospital facility illustration">
        </div>
        <div class="content">
            <h1><span>Stay</span> Safe, <span>Stay</span> Healthy.</h1>
            <p>Providing compassionate care with professional medical services.</p>
            <a href="#about"><button class="button" aria-label="Read more about our services">Read More</button></a>
        </div>
    </div>
</section>

<section id="about" class="about">
    <h1 class="heading">About Our Facility</h1>
    <h3 class="title">Learn and Explore Our Services</h3>
    <div class="box-container">
        <div class="box">
            <div class="images">
                <img src="/images/about-1.png" alt="Ambulance services illustration">
            </div>
            <div class="content">
                <h3>Ambulance Services</h3>
                <p>Our 24/7 ambulance services ensure rapid response and safe transport for emergencies.</p>
            </div>
        </div>
        <div class="box">
            <div class="images">
                <img src="/images/about-2.png" alt="Emergency rooms illustration">
            </div>
            <div class="content">
                <h3>Emergency Rooms</h3>
                <p>State-of-the-art emergency rooms staffed with skilled professionals for urgent care.</p>
            </div>
        </div>
        <div class="box">
            <div class="images">
                <img src="/images/about-3.png" alt="Free check-ups illustration">
            </div>
            <div class="content">
                <h3>Free Check-Ups</h3>
                <p>Complimentary health screenings to promote wellness and early detection.</p>
            </div>
        </div>
    </div>
</section>

